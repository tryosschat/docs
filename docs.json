{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "OpenChat",
  "colors": {
    "primary": "#16A34A",
    "light": "#22C55E",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Guides",
            "icon": "book",
            "pages": [
              "guides/architecture",
              "guides/authentication",
              "guides/ai-models",
              "guides/contributing"
            ]
          },
          {
            "group": "Self-Hosting",
            "icon": "server",
            "pages": [
              "self-hosting/docker",
              "self-hosting/environment"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/tryosschat/openchat",
          "icon": "github"
        },
        {
          "anchor": "Try OpenChat",
          "href": "https://osschat.io",
          "icon": "arrow-up-right-from-square"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/tryosschat/openchat"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Try OpenChat",
      "href": "https://osschat.io"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/tryosschat/openchat"
    }
  },
  "mermaid": {}
}
